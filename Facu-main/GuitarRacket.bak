#reader(lib "htdp-intermediate-reader.ss" "lang")((modname GuitarRacket) (read-case-sensitive #t) (teachpacks ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp"))) (htdp-settings #(#t constructor repeating-decimal #f #t none #f ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp")) #f)))
(define-struct Interface[nv nr na nz NV NR NA NZ])
; Interface[Number Number Number Number Boolean Boolean Boolean Boolean]
(define LARGO 500)
(define ALTO 800)
(define TAM-NOTAS 40)
(define ESCENARIO (empty-scene LARGO ALTO))
(define estadoInicial (make-Interface 0 0 0 0 #f #f #f #f))
;-------------------------------------------------------------------------
; Tamanio de las notas:
; c = circulo, v = verde(ej) 
(define cv (circle TAM-NOTAS "solid" "green"))
(define cr (circle TAM-NOTAS "solid" "red"))
(define ca (circle TAM-NOTAS "solid" "yellow"))
(define cz (circle TAM-NOTAS "solid" "blue"))

;-------------------------------------------------------------------------
; Divisiones de pantalla horizontal:
; z = zona, v = azul(ej)
(define zv (* LARGO (/ 1 8)))
(define zr (* LARGO (/ 3 8)))
(define za (* LARGO (/ 5 8)))
(define zz (* LARGO (/ 7 8)))

; Division de pantalla vertical:
(define teclas (/ (* ALTO 10) 100))

;-------------------------------------------------------------------------

(define (render estado) (place-image (circle TAM-NOTAS "solid" "green") zv teclas
                                     (place-image (circle))))

(big-bang estadoInicial
  [to-draw render]
  [on-tick notes]
  [on-key playing]
  )